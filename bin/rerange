#!/usr/bin/env python

import sys 

if len(sys.argv) < 2:
    print("Ooops. Usage:" + sys.argv[0] + ' xyzFile')
    exit()

f1 = open(sys.argv[1],'r')
out_name = sys.argv[1].split('.xyz')[0] + '_RROH.xyz'
f2 = open(out_name, 'w')



f3 = open(sys.argv[1],'r')
num_atom = f3.readline()
num = int(num_atom)
f3.close()

line = 'Ya'
section_O = section_H = ''

while line:
    if len(line) == 0:
        print('End')
        break
    if num_atom == line:
        f2.write(section_O + section_H) 
        section_O = section_H = ''
        f2.write(line)
        line = f1.readline()
        f2.write(line)
        line = f1.readline()
    else:
        frist_char = line[0]
        if frist_char == 'O':
            section_O +=  line
        elif frist_char == 'H':
            section_H +=  line
        else:
            print('-------------------------\nYa, you are soooo cool!!!\n-------------------------\n\
        \   ^__^\n\
         \  (oo)\_______\n\
            (__)\       )\/\n\
                ||--vvv-|\n\
                ||     ||\n\
            ')
        line = f1.readline()

f2.write(section_O + section_H) 
f1.close()
f2.close()

print('{} saved.'.format(out_name))
