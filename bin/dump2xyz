#!/usr/bin/env python

import sys 

if len(sys.argv) < 3:
    print("Ooops. Usage:" + sys.argv[0] + ' dumpfile xyzfile ')
    exit()

# File to obtain atom number
atom_num_line = 4
atom_num = -1
f0 = open(sys.argv[1],'r')
for i in range(atom_num_line):
    line = f0.readline()
    if i == 3:
        atom_num = int(line)
f0.close()
print('Atom Number: {}'.format(atom_num))


# Original file
f1 = open(sys.argv[1],'r')

# Output file
if len(sys.argv) == 3:
    out_name = sys.argv[2]
f2 = open(out_name, 'w')

head_number = 9
step = -1
while True:
    # Read Head info
    for i in range(head_number):
        line = f1.readline()
        if i == 1:
            step = int(line)
    print('Step: {}'.format(step))

    # Write Head info of xyz file 
    f2.write('{}\n'.format(atom_num))
    f2.write('Atoms. Timestep: {}\n'.format(step))
    for i in range(atom_num):
        line = f1.readline()
        items = line.split(' ')
        if items[1] == '1':
            f2.write('O {} {} {}'.format(items[-3], items[-2], items[-1]))
        elif items[1] == '2':
            f2.write('H {} {} {}'.format(items[-3], items[-2], items[-1]))
        else:
            pass
    pos = f1.tell()
    line = f1.readline()
    if line == '':
        break
    else:
        f1.seek(pos)

f1.close()
f2.close()

